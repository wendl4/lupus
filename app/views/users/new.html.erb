<section>
	<div class="container">

		<div class="row">
			<div class="col-md-6 col-md-offset-3">

				<div class="toggle toggle-transparent toggle-accordion toggle-noicon">
					<div class="toggle active">
						<label class="size-20"><i class="glyphicon glyphicon-user"></i> &nbsp; Nemáte ešte účet?</label>
						<div class="toggle-content">


							<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
								<fieldset>

									<div class="row">
										<div class="form-group">

											<div class="col-md-6 col-sm-6">
												<label>Používateľské meno*</label>
												<label class="input margin-bottom-10">
													<i class="ico-append fa fa-user"></i>
													<%= f.text_field :username%>
													<b class="tooltip tooltip-bottom-right">Vaše používateľské meno</b>
												</label>
											</div>
										</div>
									</div>

									<div class="row">
										<div class="form-group">

											<div class="col-md-6 col-sm-6">
												<label for="register:email">Email *</label>
												<label class="input margin-bottom-10">
													<i class="ico-append fa fa-envelope"></i>
													<%= f.text_field :email%>
													<b class="tooltip tooltip-bottom-right">Vaša E-mailová adresa </b>
												</label>
											</div>

										</div>
									</div>

									<div class="row">
										<div class="form-group">

											<div class="col-md-6 col-sm-6">
												<label for="register:pass1">Heslo *</label>
												<label class="input margin-bottom-10">
													<i class="ico-append fa fa-lock"></i>
													<%= f.password_field :password%> 
													<b class="tooltip tooltip-bottom-right">Min. 6 znakov</b>
												</label>
											</div>

											<div class="col-md-6 col-sm-6">
												<label for="register:pass2">Heslo znovu *</label>
												<label class="input margin-bottom-10">
													<i class="ico-append fa fa-lock"></i>
													<%= f.password_field :password_confirmation%> 
													<b class="tooltip tooltip-bottom-right">Zadajte heslo ešte raz</b>
												</label>
											</div>

										</div>
									</div>

									<hr />

								</fieldset>

								<div class="row">
									<div class="col-md-12">
										<button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Registrovať</button>
									</div>
								</div>

							<% end %>
							  <% if @user.errors.any? %>
							    <ul class="Signup_Errors">
							    <% for message_error in @user.errors.full_messages %>
							      <li>* <%= message_error %></li>
							    <% end %>
							    </ul>
							<% end %>



						</div>
						<label class="size-20"><i class="glyphicon glyphicon-user"></i> <%= link_to "Máte už účet?", "login" %> </label>
					</div>

				</div>

			</div>
		</div>

	</div>
</section>
