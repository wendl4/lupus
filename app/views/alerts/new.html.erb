<section>
	<div class="container">
		
		<div class="row">

			<!-- FORM -->
			<div class="col-md-9 col-sm-9">

				<h3>Napíšte nám vaše výhrady k tomuto záznamu</h3>


				<%= form_tag({:action => :add_alert}, {:method => :post}) do %>
					<fieldset>
						<input type="hidden" name="action" value="contact_send" />
						<div class="row">
							<div class="form-group">
								<div class="col-md-12">
									<label for="contact:message">Správa *</label>
									<textarea required maxlength="10000" rows="8" class="form-control" name="message" id="message"></textarea>
								</div>
							</div>
						</div>
					</fieldset>

					<div class="row">
						<div class="col-md-12">
							<%= hidden_field_tag 'record_id', @record_id  %>
							<%= hidden_field_tag 'user_id', session[:user_id]  %>
							<%= submit_tag( "Poslať", {class: "btn btn-primary btn-lg"} ) %>
						</div>
					</div>
				<% end %>

			</div>
			<!-- /FORM -->


			<!-- INFO -->
			<div class="col-md-3 col-sm-3">

				<h2>Vaše pripomienky</h2>

				<p>
					Ak sa Vám niečo nezdá a máte k informáciam výhrady, nahláste nám to a pomôžte tak zvýšiť kvalitu záznamov.
				</p>

			</div>
			<!-- /INFO -->

		</div>

	</div>
</section>